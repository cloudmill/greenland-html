mixin work-modal
  .header-modal(data-work-modal="")
    .header-modal__ttl работа с нами
    .header-modal__wrapper
      -
        const items = [
          {
            pic: 'header-modal-1.jpg',
            ttl: 'Условия работы с дизайнерами',
          },
          {
            pic: 'header-modal-2.jpg',
            ttl: 'Условия работы для объектов',
          },
          {
            pic: 'header-modal-3.jpg',
            ttl: 'Условия работы для дистрибьютеров и оптовых покупателей',
          },
        ]

      each i in items
        .header-modal__row
          img.header-modal__img(src=`assets/images/${i.pic}`, alt="")
          a.header-modal__row-ttl(href="")
            |#{i.ttl}
            img(src="assets/images/icons/lanscape-arrow.svg", alt="")

    .header-modal__close

