mixin catalog-modal
  .header-modal(data-catalog-modal="")
    .header-modal__ttl.catalog-modal-ttl каталог продукции
    .header-modal__wrapper.catalog-modal-table
      -
        const items = [
          {
            ttl: 'Вазоны',
            img: 'header-catalog-2.png',
            full: 'header-catalog-2-full.jpg',
          },
          {
            ttl: 'Cадовый декор',
            img: 'header-catalog-3.png',
            full: 'header-catalog-3-full.jpg',
          },
          {
            ttl: 'Искусственные растения',
            img: 'header-catalog-4.png',
            full: 'header-catalog-4-full.jpg',
          },
          {
            ttl: 'Дизайнерское озеленение',
            img: 'header-catalog-5.png',
            full: 'header-catalog-5-full.jpg',
          },
          {
            ttl: 'Мебель и свет',
            img: 'header-catalog-6.png',
            full: 'header-catalog-6-full.jpg',
          },
          {
            ttl: 'Грунт и керамзит',
            img: 'header-catalog-7.png',
            full: 'header-catalog-7-full.jpg',
          },
          {
            ttl: 'Аксессуары',
            img: 'header-catalog-8.png',
            full: 'header-catalog-8-full.jpg',
          },
        ]

      a.catalog-modal-cell.first(href="")
        .catalog-modal-cell__ttl Цветочные горшки и кашпо
        img.active(src=`assets/images/header-catalog-1.png`, alt="")
        img.back(src=`assets/images/header-catalog-1-full.jpg`, alt="")

      each i in items
        a.catalog-modal-cell(href="")
          .catalog-modal-cell__ttl #{i.ttl}
          img.active(src=`assets/images/${i.img}`, alt="")
          img.back(src=`assets/images/${i.full}`, alt="")

    .header-modal__close