extends ../layouts/master.pug

include ../partials/catalog-card.pug

block content

  include ../partials/_aside.pug

  .main__wrap.main__wrap--visible(data-scroll-container="")

    include ../partials/modal-ask

    include ../partials/_header.pug

    .section.page-wrapper
      .container
        +breadcrumbs(['Проекты', 'Отель Crowne Plaza'])

        .news-cols
          .news-col-links
            .news-col-links__container(data-aos="fade-up")
              a.news-back-link.project-back-link(href="")
                +arrow('white', '#65BA7F', 'left', '15', '13', '46')
                |Все проекты

              .news-social
                .news-social__title
                  span Следите 
                  |за нами
                ul.news-social__list
                  -
                    var items = [
                      'facebook',
                      'instagram',
                      'pinterest',
                      'houzz',
                      'наш блог',
                    ]
                  each item in items
                    li
                      a(href="") #{item}

              button.btn.project-aside-btn задать вопрос

          .project-page-main

            h1.about-title.title-h1(data-aos="fade-up") Терраса ЛИДЕР кОНСАЛТ

            .project-image-main(data-aos="fade-up")
              .projects__item-slider(data-fade-item-slider="")
                .projects__item-slider-wrapper(data-fade-item-slider-wrapper="")
                  img.projects__item-img.is-active(src="assets/images/project-page-1.jpg", alt="", data-fade-item-slider-item="")
                  img.projects__item-img(src="assets/images/projects__item-img-1.jpg", alt="", data-fade-item-slider-item="")
                  img.projects__item-img(src="assets/images/projects__item-img-2.jpg", alt="", data-fade-item-slider-item="")
                  img.projects__item-img(src="assets/images/projects__item-img-1.jpg", alt="", data-fade-item-slider-item="")
                .bullets.projects__item-slider-bullets
                  .bullet.projects__item-slider-bullet.is-active(data-fade-item-slider-bullet="true")
                  .bullet.projects__item-slider-bullet(data-fade-item-slider-bullet="true")
                  .bullet.projects__item-slider-bullet(data-fade-item-slider-bullet="true")
                  .bullet.projects__item-slider-bullet(data-fade-item-slider-bullet="true")

            .project-info
              .project-info__col(data-aos="fade-up")
                .project-info__ttl расположение
                .project-info__txt Санкт-Петербург, Лиговский проспект., 61
              .project-info__col(data-aos="fade-up")
                .project-info__ttl Что было сделано
                .project-info__txt Терраса, бизнес-центр, озеленение офиса

            .project-products
              h3.title-h2(data-aos="fade-up")
                |На проекте использовалось
              .designers-products-filter.tabs-num(data-aos="fade-up")
                ul
                  li.filter-tab.active-tab
                    |Кашпо
                    sup 2
                  -
                    var items = [
                      //- 'Классический',
                      'Растения<sup>2</sup>',
                    ]
                  each item in items
                    li.filter-tab
                      |!{item}

                .designers-products__controls(data-catalog-slider-controls="")
                  .arrows.cover__slider-arrows
                    +arrow('#0F2C2D', '#CAE8D9', 'left', 18, 14, 50)(data-catalog-slider-prev="")
                    +arrow('#0F2C2D', '#CAE8D9', 'right', 18, 14, 50)(data-catalog-slider-next="")


              .designers-products__catalog(data-aos="fade-up")
                .swiper-container(data-catalog-slider="")
                  .swiper-wrapper
                
                    - for (i=0; i<5; i++)
                      +catalog-card.swiper-slide(images=["assets/images/catalog-1.png", "https://via.placeholder.com/600/771796", "https://via.placeholder.com/150/92c952", "https://via.placeholder.com/150/1fe46f"])

            .blog-body(data-aos="fade-up")
              h3.title-h3 о проекте
              p Открытая терраса на 8 этаже офиса компании ЛИДЕР КОНСАЛТ Менеджмент на Лиговском проспекте в г. Санкт-Петербург.
              p В проекте использованы кашпо Pottery Pots  модель Orb, а также искусственные Самшиты 
              p Бюджет до 100 000 руб
              h3.title-h3 С какими проблемами столкнулись
              p Не стали использовать кашпо из  3D пластик (хоть они имеют идеальные характеристики для общественных зон:  UV фильтр, морозостойкость, не царапаются), тк на 8 этаже был ветер и кашпо использовалось без земли.
              h3.title-h3 Как решали
              p Выбрали кашпо из файбергласса устойчивой формы, фактура кашпо идеально подошла к оформлению террасы. Файбергласс отлично подходит для открытых террас, тк не выгорает на солнце, имеет хорошую устойчивость к царапинам и сколам, разнообразие фактур и форм помогает подобрать вариант под любое пространство.

            .project-photos(data-aos="fade-up")
              - for (i=0; i<4; i++)
                img.project-photos__item(src=`assets/images/project-photo-${i + 1}.jpg`, alt="")


            .career-hh.project-review(data-aos="fade-up")
              a.career-hh__link(data-fancybox="images" href="assets/images/review.jpg")
                div отзыв
                  br
                  |клиента
              img(src="assets/images/project-blockquote.png", alt="")

    include ../partials/_footer.pug